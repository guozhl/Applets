.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 330rpx;
  background-color: #fff;
}

.head {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
}

.head .tag {
  width: 90rpx;
  height: 40rpx;
  margin-left: 20rpx;
  padding: 5rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  text-align: center;
  background-color: #f7f7f7 !important;
}

.head .like {
  margin-right: 20rpx;
  display: flex;
  font-size: 24rpx;
}

.head .like image {
  width: 30rpx;
  height: 30rpx;
  margin-top: 3rpx;
  margin-right: 5rpx;
}

.music-img {
  width: 300rpx;
  height: 180rpx;
}

.text {
  width: 300rpx;
  height: 50rpx;
  margin: 30rpx;
  font-size: 28rpx;
  text-align: center;
  color: #666;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
