.container {
  background-color: #f5f5f5;
  width: 100%;
  height: auto;
  padding-bottom: 130rpx;
  box-sizing: border-box;
}

/* 头部 */

.head {
  background-color: #fff;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.head image {
  width: 200rpx;
  height: 200rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.head .title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}

.head .author {
  font-size: 28rpx;
  color: #999;
}

.sub-container {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  background-color: #fff;
}

.sub-container .headline {
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  margin-bottom: 20rpx;
}

/* 专辑信息 */

.sub-container .detail-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 28rpx;
  color: #666;
}

.sub-container .detail-container .vertical {
  display: flex;
  flex-direction: column;
}

.sub-container .detail-container .description {
  color: #999;
  margin-right: 30rpx;
}

/* 歌曲列表 */

.sub-container .song-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.sub-container .table-title {
  height: 70rpx;
  line-height: 70rpx;
  background-color: #fbfbfd;
  color: #999;
}

.sub-container .table-body {
  height: 60rpx;
  line-height: 60rpx;
}

.sub-container .table-body:nth-child(even) {
  background-color: #fbfbfd;
}

.sub-container .song-container text {
  text-align: left;
  font-size: 28rpx;
}

.sub-container .song-container text:nth-child(1) {
  width: 60rpx;
  color: #999;
}

.sub-container .song-container text:nth-child(2) {
  width: 60%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.sub-container .song-container text:nth-child(3) {
  width: 180rpx;
}

.sub-container .song-container text:nth-child(4) {
  width: 100rpx;
  color: #999;
}

/* 评论列表 */

.sub-container .comment-content {
  width: 100%;
  padding: 10rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-top: solid 1px #ededed;
}

.sub-container .comment-content:last-child {
  border-bottom: solid 1px #ededed;
}

.sub-container .comment-content image {
  margin-top: 15rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}

.sub-container .comment-content view {
  width: 85%;
  display: flex;
  flex-direction: column;
}

.sub-container .comment-content text {
  margin: 3rpx;
  font-size: 28rpx;
}

.sub-container .comment-content view text:nth-child(odd){
  color: #999;
}

/* 底部短评 */

.post-container {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 130rpx;
  padding: 0 30rpx 30rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  box-shadow: 1px -1px 1px #e3e3e3;
  background-color: #fff;
}

.post-container .post-fake {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #999;
  border-radius: 15px;
  font-size: 22rpx;
  padding-left: 20rpx;
}

.posting-container {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  bottom: 0;
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  z-index: 999;
}

.posting-container .post {
  width: 550rpx;
  height: 56rpx;
  background-color: #f5f5f5;
  border-radius: 15px;
  padding-left: 25rpx;
}

.posting-container .cancel {
  color: #666;
}
